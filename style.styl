green-glow-color = #2ecc40
zoomFactor = 3

establish-baseline('normalize')

body
  background-color black
  font-family Calibri, Helvetica
  color green-glow-color 
  text-shadow 0px 0px 2px green-glow-color

.guide-header
  text-align center
  font-size 20px * zoomFactor
  
.search-box
  font-size 20px * zoomFactor
  
.search-row
  margin-left auto
  margin-right auto
  
  form
  input
    display inline

.stop-reading
  // nothing
  display inline-block
  border 1px solid green-glow-color
  font-size 20px * zoomFactor
  width 30px * zoomFactor
  text-align center

.result-display
  font-size 20px * zoomFactor
